<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/idEditText"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:inputType="phone"
        android:hint="Phone num: +7-000-000-00-00"/>

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_toRightOf="@id/idEditText"
        android:layout_marginTop="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="20dp"
        android:text="change number"
        android:onClick="onChangeNumber"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_below="@id/idEditText"
        android:scaleType="centerInside" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="30dp"
        android:text="Your ID. Share with friend">
    </TextView>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginBottom="60dp"
        android:layout_marginStart="20dp"
        android:layout_below="@id/text"
        android:text="to IR"
        android:onClick="onIR"/>



    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginBottom="60dp"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/button2"
        android:layout_below="@id/text"
        android:text="add Friend"
        android:onClick="onAddFriend"/>

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginBottom="60dp"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/button3"
        android:layout_below="@id/text"
        android:text="friends List"
        android:onClick="onFriendsList"/>
</RelativeLayout>