<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    tools:context=".AddFriendActivity">

    <EditText
        android:id="@+id/idEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:inputType="phone"
        android:hint="Phone num: +7-000-000-00-00 |or scan QR"/>

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/idEditText"
        android:layout_marginStart="10dp"
        android:text="to QR-scanner"
        android:onClick="onQRScanner"/>

    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button4"
        android:layout_marginTop="20dp"
        android:hint="Name"/>

    <EditText
        android:id="@+id/hrIdEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameEditText"
        android:layout_marginTop="20dp"
        android:hint="ID from HR"/>


    <Button
        android:id="@+id/button1"
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:layout_below="@id/hrIdEditText"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="Add"
        android:onClick="onAdd"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_below="@id/hrIdEditText"
        android:layout_marginTop="50dp"
        android:layout_toLeftOf="@+id/button1"
        android:layout_marginEnd="20dp"
        android:text="Delete"
        android:onClick="onDelete"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:layout_centerHorizontal="true"
        android:text="Return"
        android:onClick="onReturn"/>

</RelativeLayout>